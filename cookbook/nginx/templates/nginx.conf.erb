user nginx;
worker_processes 4;

error_log  /var/log/nginx/error.log warn;
pid        /var/run/nginx.pid;

events {
  worker_connections 1024;
}

http {
  server_tokens off;
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;

  log_format main '$proxy_add_x_forwarded_for - $remote_user [$time_local] "$request" '
                  '$status $body_bytes_sent "$http_referer" '
                  '"$http_user_agent" "$http_x_forwarded_for"';
  access_log    /var/log/nginx/access.log main;

  proxy_buffers 8 8k;
  proxy_buffer_size 8k;

  keepalive_timeout 65;

  upstream application {
    server unix:/var/www/<%= node['nginx']['name'] %>/shared/tmp/unicorn.sock;
  }

  server {
    listen       80;
    server_name  <%= node['nginx']['host'] %>;

    gzip on;
    gzip_types application/json text/css text/javascript application/javascript;

    root /var/www/<%= node['nginx']['name'] %>/current/public;
    error_page 500 502 503 504 /500.html;
    client_max_body_size 20M;

    location /upload_files {
      internal;
      alias /var/www/<%= node['nginx']['name'] %>/current/public/upload_files;
    }

    location / {
      try_files $uri @application;
    }

    location @application {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-Proto http;
      proxy_set_header X-Forwarded-For $remote_addr;
      proxy_set_header X-Accel-Mapping /var/www/<%= node['nginx']['name'] %>/current/public/upload_files/=/upload_files/;
      proxy_set_header Host $http_host;
      proxy_pass http://application;
    }
  }
}
