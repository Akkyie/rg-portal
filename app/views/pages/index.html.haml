= render 'search/search_bar'

.content-outer
  .left.content
    = include_or_create_page_content('TopPage', 'トップページをつくる').html_safe
    = include_or_create_page_content(term_name, '今学期の授業情報を載せる').html_safe

  .right.content
    %h2
      最近追加された記事

    %ul
      - @recent_blogs.each do |blog|
        %li= link_to blog.title, blog_path(blog.to_param)

    %h2
      最近更新されたページ

    %ul
      - @recent_pages.each do |page|
        %li= link_to page.title, page_path(path: page.path)
