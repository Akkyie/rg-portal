= render 'search/search_bar'

.content-outer
  .left.content
    = raw include_or_create_page_content('TopPage', 'トップページをつくる')
    = raw include_or_create_page_content("#{term_name}/TopPage", '今学期の授業情報を載せる')

  .right.content
